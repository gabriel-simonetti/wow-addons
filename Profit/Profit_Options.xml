<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">

  <!-- Options panel Frame-->
  <Frame name="ProfitOptionsPanel" hidden="false">
	
	<Layers>
		<Layer level="ARTWORK">
			<FontString name="$parentTitle" inherits="GameFontNormalLarge" text="Profit v3.0.1 - By Coomacheek" justifyH="LEFT" justifyV="TOP">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="16" y="-16" />
					</Anchor>
				</Anchors>
			</FontString>
		</Layer>
	</Layers>
    
	<!--Frames for the main Panel  -->
   	<Frames>
	  <Button name="$parentAlgorithms" inherits="UIDropDownMenuTemplate">
		<Anchors>
	         	<Anchor point="TOP" relativeTo="$parentTitle" relativePoint="BOTTOMRIGHT">
      	      	<Offset>
            	  		<AbsDimension x="0" y="-20"/>
            		</Offset>
         		</Anchor>
         	</Anchors>
	
		<Layers>
          		<Layer level="ARTWORK">

            		<FontString name="$parentText" text="Auctioneer Pricing Algorithm" inherits="GameFontHighlight" justifyH="RIGHT">
					<Anchors>
                				<Anchor point="RIGHT" relativePoint="LEFT">
                  				<Offset>
                    					<AbsDimension x="0" y="6"/>
                  				</Offset>
                				</Anchor>
              			</Anchors>
            		</FontString>
          		</Layer>
        	</Layers>
	  	
		<Scripts>
			<OnShow>
            		UIDropDownMenu_Initialize(self, ProfitDropDownMenu_Initialize);
	        </OnShow>

		</Scripts>

	</Button>
	
	<CheckButton name="$parentStartupMsg" inherits="InterfaceOptionsBaseCheckButtonTemplate">
      	<Anchors>
          		<Anchor point="TOPLEFT" relativeTo="$parentTitle" relativePoint="BOTTOMLEFT">
            		<Offset>
              			<AbsDimension x="10" y="-50"/>
            		</Offset>
          		</Anchor>
        	</Anchors>
	  	
		<Layers>
          		<Layer level="ARTWORK">
            		<FontString name="$parentText" text="Show Startup Messages" inherits="GameFontHighlight">
              			<Anchors>
                				<Anchor point="TOPLEFT" relativePoint="RIGHT">
                  				<Offset>
                    					<AbsDimension x="0" y="6"/>
                  				</Offset>
                				</Anchor>
              			</Anchors>
            		</FontString>
          		</Layer>
        	</Layers>
      </CheckButton>

	<CheckButton name="$parentAHListing" inherits="InterfaceOptionsBaseCheckButtonTemplate">
      	<Anchors>
          		<Anchor point="TOPLEFT" relativeTo="$parentTitle" relativePoint="BOTTOMLEFT">
            		<Offset>
              			<AbsDimension x="10" y="-90"/>
            		</Offset>
          		</Anchor>
        	</Anchors>
	  	
		<Layers>
          		<Layer level="ARTWORK">
            		<FontString name="$parentText" text="Show per unit auction price next to the recipe name even if materials are unavailable for a given recipe." inherits="GameFontHighlight" justifyH="LEFT" maxLines="2">
              			 <Size>
							<AbsDimension x="400" y="20" />
						</Size>
						<Anchors>
                				<Anchor point="TOPLEFT" relativePoint="RIGHT">
                  				<Offset>
                    					<AbsDimension x="0" y="6"/>
                  				</Offset>
                				</Anchor>
              			</Anchors>
            		</FontString>
          		</Layer>
        	</Layers>
      </CheckButton>

	<CheckButton name="$parentAHListingPerUnit" inherits="InterfaceOptionsBaseCheckButtonTemplate">
      	<Anchors>
          		<Anchor point="TOPLEFT" relativeTo="$parentTitle" relativePoint="BOTTOMLEFT">
            		<Offset>
              			<AbsDimension x="10" y="-140"/>
            		</Offset>
          		</Anchor>
        	</Anchors>
	  	
		<Layers>
          		<Layer level="ARTWORK">
            		<FontString name="$parentText" text="When materials are available for a given recipe, always show per unit auction price rather than total stack price." inherits="GameFontHighlight" justifyH="LEFT" maxLines="2">
              			<Size>
							<AbsDimension x="400" y="20" />
						</Size>
						<Anchors>
                				<Anchor point="TOPLEFT" relativePoint="RIGHT">
                  				<Offset>
                    					<AbsDimension x="0" y="6"/>
                  				</Offset>
                				</Anchor>
              			</Anchors>
            		</FontString>
          		</Layer>
        	</Layers>
      </CheckButton>
      <CheckButton name="$parentRoundValue" inherits="InterfaceOptionsBaseCheckButtonTemplate">
      	<Anchors>
          		<Anchor point="TOPLEFT" relativeTo="$parentTitle" relativePoint="BOTTOMLEFT">
            		<Offset>
              			<AbsDimension x="10" y="-185"/>
            		</Offset>
          		</Anchor>
        	</Anchors>
	  	
		<Layers>
          		<Layer level="ARTWORK">
            		<FontString name="$parentText" text="Round all results to the nearest Gold." inherits="GameFontHighlight">
              			<Anchors>
                				<Anchor point="TOPLEFT" relativePoint="RIGHT">
                  				<Offset>
                    					<AbsDimension x="0" y="6"/>
                  				</Offset>
                				</Anchor>
              			</Anchors>
            		</FontString>
          		</Layer>
        	</Layers>
      </CheckButton>


	
      <CheckButton name="$parentFlagProfit" inherits="InterfaceOptionsBaseCheckButtonTemplate">
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parentTitle" relativePoint="BOTTOMLEFT">
            <Offset>
              <AbsDimension x="10" y="-225"/>
            </Offset>
          </Anchor>
        </Anchors>
        <Layers>
          <Layer level="ARTWORK">
            <FontString name="$parentText" text="Only show price for items that result in potential profit:" inherits="GameFontHighlight">
              <Anchors>
                <Anchor point="TOPLEFT" relativePoint="RIGHT">
                  <Offset>
                    <AbsDimension x="0" y="6"/>
                  </Offset>
                </Anchor>
              </Anchors>
            </FontString>
          </Layer>
        </Layers>
      </CheckButton>

      <EditBox name="$parentProfitLevel" autoFocus="false" inherits="InputBoxTemplate">
        <Size>
          <AbsDimension x="50" y="5"/>
        </Size>
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parentFlagProfit" relativePoint="BOTTOMLEFT">
            <Offset>
              <AbsDimension x="248" y="-5"/>
            </Offset>
          </Anchor>
        </Anchors>
        <Layers>
          <Layer level="ARTWORK">
            <FontString name="$parentText" text="Greater than (in gold):" inherits="GameFontHighlight">
              <Anchors>
                <Anchor point="RIGHT" relativePoint="LEFT">
                  <Offset>
                    <AbsDimension x="-10" y="1"/>
                  </Offset>
                </Anchor>
              </Anchors>
            </FontString>
          </Layer>
        </Layers>
        <FontString inherits="ChatFontNormal" bytes="64"/>
      </EditBox>

	<CheckButton name="$parentShowReagentValue" inherits="InterfaceOptionsBaseCheckButtonTemplate">
      	<Anchors>
          		<Anchor point="TOPLEFT" relativeTo="$parentTitle" relativePoint="BOTTOMLEFT">
            		<Offset>
              			<AbsDimension x="10" y="-275"/>
            		</Offset>
          		</Anchor>
        	</Anchors>
	  	
		<Layers>
          		<Layer level="ARTWORK">
            		<FontString name="$parentText" text="Show price of reagents in the recipe details window." inherits="GameFontHighlight">
              			<Anchors>
                				<Anchor point="TOPLEFT" relativePoint="RIGHT">
                  				<Offset>
                    					<AbsDimension x="0" y="6"/>
                  				</Offset>
                				</Anchor>
              			</Anchors>
            		</FontString>
          		</Layer>
        	</Layers>
      </CheckButton>
		<CheckButton name="$parentProfitMargin" inherits="InterfaceOptionsBaseCheckButtonTemplate">
      	<Anchors>
          		<Anchor point="TOPLEFT" relativeTo="$parentTitle" relativePoint="BOTTOMLEFT">
            		<Offset>
              			<AbsDimension x="10" y="-310"/>
            		</Offset>
          		</Anchor>
        	</Anchors>
	  	
		<Layers>
          		<Layer level="ARTWORK">
            		<FontString name="$parentText" text="Show profit margin in recipe details window along with gold profit." inherits="GameFontHighlight" justifyH="LEFT" maxLines="2">
              			 <Size>
							<AbsDimension x="325" y="20" />
						</Size>
						<Anchors>
                				<Anchor point="TOPLEFT" relativePoint="RIGHT">
                  				<Offset>
                    					<AbsDimension x="0" y="6"/>
                  				</Offset>
                				</Anchor>
              			</Anchors>
            		</FontString>
          		</Layer>
        	</Layers>
      </CheckButton>
	  
	  <CheckButton name="$parentShort" inherits="InterfaceOptionsBaseCheckButtonTemplate">
      	<Anchors>
          		<Anchor point="TOPLEFT" relativeTo="$parentTitle" relativePoint="BOTTOMLEFT">
            		<Offset>
              			<AbsDimension x="10" y="-350"/>
            		</Offset>
          		</Anchor>
        	</Anchors>
	  	
		<Layers>
          		<Layer level="ARTWORK">
            		<FontString name="$parentText" text="Tidy up the tradeskill window by removing certain key words (separated by a comma) from the tradeskill name." inherits="GameFontHighlight" justifyH="LEFT" maxLines="3">
              			<Size>
							<AbsDimension x="400" y="30" />
						</Size>
						<Anchors>
                				<Anchor point="TOPLEFT" relativePoint="RIGHT">
                  				<Offset>
                    					<AbsDimension x="0" y="6"/>
                  				</Offset>
                				</Anchor>
              			</Anchors>					
            		</FontString>
          		</Layer>
        	</Layers>
      </CheckButton>
	  
	  <EditBox name="$parentShortEditBox" autoFocus="false" inherits="InputBoxTemplate">
        <Size>
          <AbsDimension x="475" y="5"/>
        </Size>
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parentShort" relativePoint="BOTTOMLEFT">
            <Offset>
              <AbsDimension x="50" y="-25"/>
            </Offset>
          </Anchor>
        </Anchors>
        <FontString inherits="ChatFontNormal" bytes="128"/>
      </EditBox>
	  
	  <CheckButton name="$parentUsePlayerReagentCount" inherits="InterfaceOptionsBaseCheckButtonTemplate">
      	<Anchors>
          		<Anchor point="TOPLEFT" relativeTo="$parentTitle" relativePoint="BOTTOMLEFT">
            		<Offset>
              			<AbsDimension x="10" y="-430"/>
            		</Offset>
          		</Anchor>
        	</Anchors>
	  	
		<Layers>
          		<Layer level="ARTWORK">
            		<FontString name="$parentText" text="Take into account current inventory when calculating total price for a recipe.  If unchecked, presumes all reagents will be purchased from vendor/auction house. " inherits="GameFontHighlight" justifyH="LEFT" maxLines="4">
              			<Size>
							<AbsDimension x="330" y="40" />
						</Size>
						<Anchors>
                				<Anchor point="TOPLEFT" relativePoint="RIGHT">
                				<Offset>
                    				<AbsDimension x="0" y="6"/>
                  				</Offset>
								</Anchor>
              			</Anchors>					
            		</FontString>
          		</Layer>
        	</Layers>
      </CheckButton>
	  <CheckButton name="$parentDebugMode" inherits="InterfaceOptionsBaseCheckButtonTemplate">
	        <Anchors>
          		<Anchor point="TOPLEFT" relativeTo="$parentTitle" relativePoint="BOTTOMLEFT">
            		<Offset>
              			<AbsDimension x="10" y="-500"/>
            		</Offset>
          		</Anchor>
        	</Anchors>
	  	
		<Layers>
          		<Layer level="ARTWORK">
            		<FontString name="$parentText" text="Enable debug mode." inherits="GameFontHighlight" justifyH="LEFT" maxLines="4">

						<Anchors>
                				<Anchor point="TOPLEFT" relativePoint="RIGHT">
                				<Offset>
                    				<AbsDimension x="0" y="6"/>
                  				</Offset>
								</Anchor>
              			</Anchors>					
            		</FontString>
          		</Layer>
        	</Layers>
      </CheckButton>
    </Frames>
  </Frame>
</Ui>